{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2018",
        "lib": [
            "esnext.array"
        ],
        "alwaysStrict": true,
        "strict": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "baseUrl": ".",
        "listEmittedFiles": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
